
<AppFactory xmlns="http://www.wso2.org/appfactory/">

    <!--Admin user in the app factory. This user is added to each and every project as the administrator-->
    <AdminUserName>admin</AdminUserName>
    <AdminPassword>admin</AdminPassword>

    <!--Project Management configurations-->
    <ProjectMgt>
        <DefaultProjectUserRoles>Developer</DefaultProjectUserRoles>
    </ProjectMgt>

    <!--SSO relying party configuration.-->
    <SSORelyingParty>
        <Name>WSO2 AppFactory Project Management</Name>
        <IdentityProviderURL>https://localhost:9443/samlsso</IdentityProviderURL>
        <KeyStorePassword>wso2carbon</KeyStorePassword>
        <IdentityKeyAlias>wso2carbon</IdentityKeyAlias>
        <KeyStoreName>
            E:\src\java\carbon_trunk\platform\products\appfactory\modules\distribution\product\target\wso2appfactory-1.0.0-SNAPSHOT/repository/resources/security/wso2carbon.jks
        </KeyStoreName>
     </SSORelyingParty>

    <!-- Web service end points including BPEL services-->
    <WebServiceEndPoints>
        <GetRolesOfUserForProject>
            http://localhost:9763/services/UserRoleService/getRolesOfUserPerProject
        </GetRolesOfUserForProject>

        <CreateRepo>http://localhost:9763/services/IDTMESVNService/createRepository</CreateRepo>

        <GetUsersOfProject>http://localhost:9763/services/UserMgtService/getUserListForProject
        </GetUsersOfProject>

        <EmailVerificationService>https://localhost:9443/services/EmailVerificationService
        </EmailVerificationService>

        <AddUserToProject>http://localhost:9763/services/AddUserToProjectService/process
        </AddUserToProject>
        <CreateProject>http://localhost:9763/services/CreateProjectService/process</CreateProject>
        <CreateUser>http://localhost:9763/services/UserCreationProcess</CreateUser>
        <ActivateUser>http://localhost:9763/services/UserActivationProcess/process</ActivateUser>
    </WebServiceEndPoints>

    <!--Project repository related configurations-->
    <RepositoryMGTConfig>
        <SCMServerIp>192.168.4.26</SCMServerIp>
        <SCMServerPort>8081</SCMServerPort>
        <SCMServerRealmName>SONIA :: SCM Manager</SCMServerRealmName>
        <SCMServerAdminUserName>scmadmin</SCMServerAdminUserName>
        <SCMServerAdminPassword>scmadmin</SCMServerAdminPassword>
        <ReadWritePermissionName>RW</ReadWritePermissionName>
    </RepositoryMGTConfig>

    <!--This element defines the set of staging servers, where the project artifacts are deployed. -->
    <ProjectDeployment>
        <DeploymentStage name="Development">
            <DeploymentServerURL>
                https://localhost:9443/services/
            </DeploymentServerURL>
        </DeploymentStage>
        <DeploymentStage name="QA">
            <DeploymentServerURL>
                https://localhost:9445/services/
            </DeploymentServerURL>
            <DeploymentServerURL>
                https://localhost:9447/services/
            </DeploymentServerURL>
        </DeploymentStage>
    </ProjectDeployment>
</AppFactory>
