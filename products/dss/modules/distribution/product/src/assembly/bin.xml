        </fileSet>

        <!-- copy executables in samples with execute permissions -->
        <fileSet>
            <directory>../../samples/product</directory>
            <outputDirectory>wso2dataservices-${pom.version}/samples</outputDirectory>
            <includes>
                <include>**/**.sh</include>
