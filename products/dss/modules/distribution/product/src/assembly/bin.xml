            <outputDirectory>wso2dataservices-${pom.version}</outputDirectory>
            <excludes>
                <exclude>**/daemon.sh</exclude>
                <exclude>**/wso2server.bat</exclude>
                <exclude>**/ciphertool.sh</exclude>
            </excludes>
            <includes>
                <include>**/*.sh</include>
                <include>**/native/*</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>

        <!--  copying samples -->
        <fileSet>
            <directory>../../samples/product</directory>
            <outputDirectory>wso2dataservices-${pom.version}/samples</outputDirectory>
            <excludes>
                <exclude>**/**.sh</exclude>
                <exclude>**/pom.xml</exclude>
