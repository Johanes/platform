<project default="build-all">

    <property name="carbon.home" value="../../../"/>
    <property name="repo.location" value="${carbon.home}/repository/deployment/server/webapps/"/>

    <target name="copy-webapp">
        <copy file="wso2appserver-sample-generic-java-bean-1.0.war" toDir="${repo.location}"/>
    </target>

    <target name="build-all">
        <antcall target="copy-webapp"/>
    </target>

</project>