<packages xmlns="http://wso2.com/carbon/multitenancy/billing/pacakges">
    <package name="multitenancy-free">
        <!--<subscriptionCharge>0</subscriptionCharge>--> <!-- $ per month -->
        <users>
            <limit>2</limit>
            <charge>0</charge> <!-- charge per month -->
        </users>
        <resourceVolume>
            <limit>10</limit> <!--mb per user -->
        </resourceVolume>
        <bandwidth>
            <limit>1000</limit> <!-- mb per user -->
            <overuseCharge>0</overuseCharge> <!-- $ per user per month -->
        </bandwidth>
    </package>
    <package name="multitenancy-small">
        <!--<subscriptionCharge>10</subscriptionCharge>--> <!-- $ per month -->
        <users>
            <limit>5</limit>
            <charge>10</charge> <!-- charge per month -->
        </users>
        <resourceVolume>
            <limit>25</limit> <!--mb per user -->
        </resourceVolume>
        <bandwidth>
            <limit>2000</limit> <!-- mb per user -->
            <overuseCharge>0.1</overuseCharge> <!-- $ per user per month -->
        </bandwidth>
        <userLimit>10</userLimit>
    </package>
    <package name="multitenancy-medium">
        <!--<subscriptionCharge>50</subscriptionCharge>--> <!-- $ per month -->
        <users>
            <limit>20</limit>
            <charge>50</charge> <!-- charge per month -->
        </users>
        <resourceVolume>
            <limit>100</limit> <!--mb per user -->
        </resourceVolume>
        <bandwidth>
            <limit>2000</limit> <!-- mb per user -->
            <overuseCharge>0.1</overuseCharge> <!-- $ per user per month -->
        </bandwidth>
    </package>
    <package name="multitenancy-large">
        <!--<subscriptionCharge>100</subscriptionCharge>--> <!-- $ per month -->
        <users>
            <limit>unlimited</limit>
            <charge>100</charge> <!-- charge per month -->
        </users>
        <resourceVolume>
            <limit>100</limit> <!--mb per user -->
        </resourceVolume>
        <bandwidth>
            <limit>4000</limit> <!-- mb per user -->
            <overuseCharge>0.1</overuseCharge> <!-- $ per user per month -->
        </bandwidth>
    </package>
</packages>
