	<modelVersion>4.0.0</modelVersion>
	<artifactId>identity-profile-gen</artifactId>
	<packaging>pom</packaging>
	<name>WSO2 IS - IS Profile Generation</name>
	<url>http://wso2.org</url>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.0-alpha-4</version>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>1-unpack-p2-agent-distribution</id>
						<phase>test</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.wso2.carbon</groupId>
									<artifactId>wso2carbon-core</artifactId>
									<version>${wso2carbon.version}</version>
									<type>zip</type>
									<overWrite>true</overWrite>
									<outputDirectory>target</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.wso2.maven</groupId>
				<artifactId>carbon-p2-plugin</artifactId>
				<version>${carbon.p2.plugin.version}</version>
				<executions>
					<execution>
						<id>2-p2-repo-generation</id>
						<phase>package</phase>
						<goals>
							<goal>p2-repo-gen</goal>
						</goals>
						<configuration>
							<p2AgentLocation>${basedir}/target/p2-agent</p2AgentLocation>
							<metadataRepository>file:${basedir}/target/p2-repo</metadataRepository>
							<artifactRepository>file:${basedir}/target/p2-repo</artifactRepository>
							<publishArtifacts>true</publishArtifacts>
							<publishArtifactRepository>true</publishArtifactRepository>
							<featureArtifacts>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.logging.mgt.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.system.statistics.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.soaptracer.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.security.mgt.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.xkms.mgt.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.sts.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.xfer.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.mex.feature:${wso2carbon.version}</featureArtifactDef>

								<!-- registry related features-->
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.core.common.feature:${wso2carbon.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.core.server.feature:${wso2carbon.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.core.ui.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.ui.menu.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.resource.properties.feature:${wso2carbon.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.profiles.feature:${wso2carbon.version}</featureArtifactDef>

								<!-- Directory server related features -->
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.directory.service.mgr.feature:${wso2carbon.version}</featureArtifactDef>
						  	 	<!-- identity related features-->
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.core.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.provider.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.relying.party.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.self.registration.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.user.profile.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.xacml.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.claim.mgt.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.profile.mgt.feature:${wso2carbon.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.sso.saml.feature:${wso2carbon.version}</featureArtifactDef>

								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.authenticator.token.feature:${wso2carbon.version}</featureArtifactDef>
								
								<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.um.ws.service.feature:${wso2carbon.version}</featureArtifactDef>

								<featureArtifactDef>org.wso2.identity:org.wso2.identity.styles.feature:${identity.version}</featureArtifactDef>
								<featureArtifactDef>org.wso2.identity:org.wso2.identity.utils.feature:${identity.version}</featureArtifactDef>

                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.oauth.feature:${wso2carbon.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.sts.passive.feature:${wso2carbon.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.ldap.server.feature:${wso2carbon.version}</featureArtifactDef>

                                <!-- Features related to Cloud Identity -->
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.common.feature:${stratos.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.identity:org.wso2.identity.ui.feature:${identity.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.stratos.identity.saml2.sso.mgt.feature:${stratos.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.usage.agent.feature:${stratos.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.throttling.agent.feature:${stratos.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.load.balance.agent.server.feature:${stratos.version}</featureArtifactDef>
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.issue.tracker.feature:${carbon.version}</featureArtifactDef>
                                <!-- GApp SSO features -->
                                <featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.gapp.feature:${stratos.version}</featureArtifactDef>
                                <!-- End GApp SSO features -->

							</featureArtifacts>
						</configuration>
					</execution>
					<execution>
						<id>3-p2-profile-generation</id>
						<phase>package</phase>
						<goals>
							<goal>p2-profile-gen</goal>
						</goals>
						<configuration>
							<profile>WSO2CarbonProfile</profile>
							<p2AgentLocation>${basedir}/target/p2-agent</p2AgentLocation>
							<metadataRepository>file:${basedir}/target/p2-repo</metadataRepository>
							<artifactRepository>file:${basedir}/target/p2-repo</artifactRepository>
							<destination>${basedir}/target/wso2carbon-core-${wso2carbon.version}/repository/components</destination>
							<deleteOldProfileFiles>true</deleteOldProfileFiles>
							<features>
								<feature>
									<id>org.wso2.carbon.logging.mgt.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
                                <feature>
                                    <id>org.wso2.carbon.ldap.server.feature.group</id>
                                    <version>${wso2carbon.version}</version>
                                </feature>
								<feature>
									<id>org.wso2.carbon.system.statistics.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>

								<feature>
									<id>org.wso2.carbon.soaptracer.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.security.mgt.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.xkms.mgt.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.sts.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.xfer.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								<feature>
									<id>org.wso2.carbon.mex.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								<feature>
									<id>org.wso2.carbon.registry.core.common.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
                                <feature>
                                    <id>org.wso2.carbon.registry.core.server.feature.group</id>
                                    <version>${wso2carbon.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.carbon.registry.core.ui.feature.group</id>
                                    <version>${wso2carbon.version}</version>
                                </feature>
								
								<feature>
									<id>org.wso2.carbon.registry.ui.menu.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								<feature>
									<id>org.wso2.carbon.registry.resource.properties.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
                                <feature>
                                    <id>org.wso2.carbon.registry.profiles.feature.group</id>
                                    <version>${wso2carbon.version}</version>
                                </feature>
                                                                
								<feature>
									<id>org.wso2.carbon.identity.core.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>

								<feature>
									<id>org.wso2.carbon.identity.provider.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.identity.relying.party.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.identity.self.registration.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.identity.user.profile.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.identity.xacml.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.identity.sso.saml.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								

								<feature>
									<id>org.wso2.carbon.claim.mgt.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.profile.mgt.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
																
								<feature>
									<id>org.wso2.carbon.identity.authenticator.token.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								
								<feature>
									<id>org.wso2.carbon.um.ws.service.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								<feature>
									<id>org.wso2.carbon.directory.service.mgr.feature.group</id>
									<version>${wso2carbon.version}</version>
								</feature>
								<feature>
									<id>org.wso2.identity.styles.feature.group</id>
									<version>${identity.version}</version>
								</feature>
                                <feature>
                                    <id>org.wso2.carbon.identity.sts.passive.feature.group</id>
                                    <version>${identity.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.identity.utils.feature.group</id>
                                    <version>${identity.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.carbon.identity.oauth.feature.group</id>
                                    <version>${wso2carbon.version}</version>
                                </feature>
                                <!-- Features required for Cloud Identity -->
                                <feature>
                                    <id>org.wso2.carbon.stratos.common.feature.group</id>
                                    <version>${stratos.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.identity.ui.feature.group</id>
                                    <version>${identity.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.stratos.identity.saml2.sso.mgt.feature.group</id>
                                    <version>${stratos.version}</version>
                                </feature>
                                <!-- GApp SSO features -->
                                <feature>
                                    <id>org.wso2.carbon.stratos.gapp.feature.group</id>
                                    <version>${stratos.version}</version>
                                </feature>
                                <!--End GApp SSO features -->

                                <feature>
                                    <id>org.wso2.carbon.load.balance.agent.server.feature.group</id>
                                    <version>${stratos.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.carbon.issue.tracker.feature.group</id>
                                    <version>${carbon.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.carbon.stratos.usage.agent.feature.group</id>
                                    <version>${stratos.version}</version>
                                </feature>
                                <feature>
                                    <id>org.wso2.carbon.stratos.throttling.agent.feature.group</id>
                                    <version>${stratos.version}</version>
                                </feature>

							</features>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
<groupId>org.apache.maven.plugins</groupId>
<artifactId>maven-antrun-plugin</artifactId>
<version>1.1</version>
<executions>
    <execution>
        <phase>package</phase>
        <configuration>
            <tasks>
                <replace token="false" value="true"
                         dir="target/wso2carbon-core-4.0.0-SNAPSHOT/repository/components/configuration/org.eclipse.equinox.simpleconfigurator">
                    <include name="**/bundles.info"/>
                </replace>
		<replace
                                        file="target/wso2carbon-core-${wso2carbon.version}/repository/conf/tenant-mgt.xml"
                                        token="&lt;TenantManager"
                                        value="&lt;!--TenantManager"/>

                                <replace
                                        file="target/wso2carbon-core-${wso2carbon.version}/repository/conf/tenant-mgt.xml"
                                        token="&lt;/TenantManager&gt;"
                                        value="&lt;/TenantManager--&gt;"/>

                                <replace
                                        file="target/wso2carbon-core-${wso2carbon.version}/repository/conf/tenant-mgt.xml"
                                        token="&lt;!--ISTenantManager"
                                        value="&lt;TenantManager"/>
				
                                <replace
                                        file="target/wso2carbon-core-${wso2carbon.version}/repository/conf/tenant-mgt.xml"
                                        token="&lt;/ISTenantManager--&gt;"
                                        value="&lt;/TenantManager&gt;"/>
            </tasks>
        </configuration>
        <goals>
            <goal>run</goal>
        </goals>
    </execution>
</executions>
</plugin>
		</plugins>
	</build>
</project>
