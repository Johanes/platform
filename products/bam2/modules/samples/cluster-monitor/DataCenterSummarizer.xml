<analyzerSequence name="DataCenterSummarizer">
    <trigger cron="1 * * * * ? *"/>
    <analyzers>
        <get name="BASE" batchSize="3">
           <where index="StreamSelector1">                                                                         
             <range column="ClusterStream" start="" end=""/>
           </where>
        </get> 
        <groupBy>
            <field name='dataCenter'/>
        </groupBy>
        <drop type="column">
            <fieldSet>
                <field name="correlationKey1"/>
                <field name="metaKey1"/>
                <field name="timestamp"/>
                <field name="ClusterStream"/>
                <field name="timeStamp"/>
            </fieldSet>
        </drop>
        <aggregate>
            <measure name="request_count" aggregationType="SUM"/>
            <measure name="response_count" aggregationType="SUM"/>
            <measure name="fault_count" aggregationType="SUM"/>
            <measure name="response_time" aggregationType="AVG"/>
        </aggregate>
        <put name="dataCenterSummary" dataSourceType="CASSANDRA">
            <onExist>
                <aggregate>
                    <measure name="request_count" aggregationType="SUM"/>
                    <measure name="response_count" aggregationType="SUM"/>
            	    <measure name="fault_count" aggregationType="SUM"/>
                    <measure name="response_time" aggregationType="AVG"/>
                </aggregate>
            </onExist>
        </put>
        <get name="dataCenterSummary"/>
        <log/>
    </analyzers>
</analyzerSequence>
