<analyzerSequence name="MessageTracing">                                                                     
   <trigger cron="1 * * * * ? *"/>                                                                     
   <analyzers>                                                                                                                                                                                                              
      <get name="BASE" batchSize="100">                                                                                                                                                                  
         <where index="ActivityIndex">                                                                                     
            <range column="bam_activity_id" start="" end=""/>                                                                 
         </where>                                                                                                                                                              
      </get>                                                       
      <groupBy>                                                                                  
         <field name="bam_activity_id"/>                                                      
      </groupBy>                                                                                 
      <orderBy field="timestamp"/>                                                                                                                          
   </analyzers>
</analyzerSequence>
