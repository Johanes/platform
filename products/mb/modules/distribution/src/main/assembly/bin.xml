        </fileSet>
        <fileSet>
            <directory>target/wso2carbon-core-${carbon.version}</directory>
            <outputDirectory>wso2mb-${pom.version}</outputDirectory>
            <excludes>
                <exclude>**/wso2server.sh</exclude>     
            </excludes>
