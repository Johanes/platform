        </file>
        <file>
            <source>target/wso2carbon-core-${carbon.version}/repository/conf/carbon.xml</source>
            <outputDirectory>wso2brs-${pom.version}/repository/conf/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>target/wso2carbon-core-${carbon.version}/repository/conf/wrapper.conf</source>
            <outputDirectory>wso2brs-${pom.version}/repository/conf/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>target/wso2carbon-core-${carbon.version}/bin/daemon.sh</source>
