<assembly>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/wso2carbon-core-${carbon.version}</directory>
            <outputDirectory>wso2brs-${pom.version}</outputDirectory>
            <excludes>
                <exclude>**/*.sh</exclude>
                <exclude>**/conf/axis2/axis2.xml</exclude>
                <exclude>**/conf/wrapper.conf</exclude>
                <exclude>**/native/*</exclude>
                <exclude>**/repository/deployment/server/axis2services/Version.aar</exclude>
                <exclude>**/version.txt</exclude>
                <exclude>**/LICENSE.txt</exclude>
                <exclude>**/axis2/wso2server.bat</exclude>
                <exclude>**/README.txt</exclude>
                <exclude>**/INSTALL.txt</exclude>
                <exclude>**/release-notes.html</exclude>
                <exclude>**/carbon.xml</exclude>
                <exclude>**/web.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/wso2carbon-core-${carbon.version}</directory>
            <outputDirectory>wso2brs-${pom.version}</outputDirectory>
            <excludes>
                <exclude>**/daemon.sh</exclude>
            </excludes>
            <includes>
                <include>**/*.sh</include>
                <include>**/native/*</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
			
        <fileSet>
            <directory>
                ../../p2-profile/product/target/wso2carbon-core-${carbon.version}/repository/conf/advanced/
            </directory>
            <outputDirectory>wso2brs-${pom.version}/repository/conf/advanced</outputDirectory>
            <includes>
                <include>**/qpid-config.xml</include>
                <include>**/qpid-jmxremote.access</include>
                <include>**/qpid-virtualhosts.xml</include>
            </includes>
        </fileSet>
         <fileSet>
            <directory>
                ../../p2-profile/product/target/wso2carbon-core-${carbon.version}/repository/conf/security/
            </directory>
            <outputDirectory>wso2brs-${pom.version}/repository/conf/security</outputDirectory>
            <includes>
                <include>**/jaas.conf</include>
                <include>**/krb5.conf</include>
            </includes>
        </fileSet>
       
        <fileSet>
            <directory>
                ../../samples/product/src
            </directory>
            <outputDirectory>wso2brs-${pom.version}/samples/src</outputDirectory>

        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>wso2as-${pom.version}/repository/lib</outputDirectory>
            <includes>
                <include>bouncycastle:bcprov-jdk15:jar</include>
            </includes>
        </dependencySet>
	<dependencySet>
	    <outputDirectory>wso2brs-${pom.version}/repository/deployment/client/modules</outputDirectory>
	    <includes>
		<include>org.apache.rampart:rampart:mar</include>
	    </includes>
	</dependencySet>
    </dependencySets>

