<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <parent>
        <groupId>org.wso2.brs</groupId>
        <artifactId>integration-services</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>CallChargingService</artifactId>
    <packaging>aar</packaging>
    <name>Call charging service aar</name>

    <dependencies>
        <dependency>
            <groupId>org.wso2.brs</groupId>
            <artifactId>org.wso2.brs.samples</artifactId>
            <version>${brs.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.wso2.carbon</groupId>
                    <artifactId>org.wso2.carbon.rule.core</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.axis2</groupId>
                <artifactId>axis2-aar-maven-plugin</artifactId>
                <version>1.6.2</version>
                <extensions>true</extensions>
                <configuration>
                    <fileSet>
                        <outputDirectory>lib</outputDirectory>
                    </fileSet>
                    <fileSets>
                        <fileSet>
                            <directory>META-INF</directory>
                            <outputDirectory>META-INF</outputDirectory>
                        </fileSet>
                    </fileSets>
                    <aarName>CallChargingService</aarName>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
