        </fileSet>
        <fileSet>
            <directory>../apps/</directory>
            <outputDirectory>jaggery-${carbon.product.version}/repository/deployment/server/jaggeryapps/
            </outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
    </fileSets>
