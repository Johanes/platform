            <excludes>
                <exclude>**/daemon.sh</exclude>
                <exclude>**/wso2server.bat</exclude>
                <exclude>**/ciphertool.sh</exclude>
            </excludes>
            <includes>
                <include>**/*.sh</include>
                <include>**/native/*</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
	 <!--  copying samples -->
