<project name="org.wso2.carbon.registry.samples.populator" default="help" basedir=".">
    <property name="registry.home" value="../../.."/>
    <property name="class.dir" value="target/classes"/>
    <property name="people.dir" value="../PeopleModel"/>
    <property name="process.dir" value="../BusinessProcessModel"/>
    <property name="test.plan.dir" value="../TestPlanModel"/>
    <property name="application.dir" value="../ApplicationModel"/>
    <property name="project.dir" value="../ProjectModel"/>
    <property name="wadl.dir" value="../WADLModel"/>
    <property name="username" value="admin"/>
    <property name="password" value="admin"/>
    <property name="host" value="localhost"/>
    <property name="port" value="9443"/>
    <property name="version" value="${carbon.version}"/>
    <target name="help">
        <echo/>
    </target>    

    <target name="compile" depends="init" description="Compile all Java">
        <javac srcdir="src" destdir="${class.dir}">
            <classpath refid="javac.classpath"/>
        </javac>
    </target>

    <target name="run-people" depends="jar">
        <java classname="org.wso2.carbon.registry.samples.populator.Main" classpathref="javac.classpath"
              fork="true">
            <sysproperty key="carbon.home"  value="${registry.home}"/>
            <arg value="-ch" />
            <arg value="${registry.home}"/>
            <arg value="-h"/>
            <arg value="${host}"/>
            <arg value="-p" />
            <arg value="${port}"/>
            <arg value="-u" />
            <arg value="${username}"/>
            <arg value="-pw" />
            <arg value="${password}"/>
            <arg value="-l" />
            <arg value="${people.dir}"/>
        </java>
    </target>

    <target name="run-process" depends="jar-process, jar">
        <java classname="org.wso2.carbon.registry.samples.populator.Main" classpathref="javac.classpath"
              fork="true">
            <sysproperty key="carbon.home"  value="${registry.home}"/>
            <arg value="-ch" />
            <arg value="${registry.home}"/>
            <arg value="-h"/>
            <arg value="${host}"/>
            <arg value="-p" />
            <arg value="${port}"/>
            <arg value="-u" />
            <arg value="${username}"/>
            <arg value="-pw" />
            <arg value="${password}"/>
            <arg value="-l" />
            <arg value="${process.dir}"/>
        </java>
    </target>

    <target name="jar-process" depends="clean-process, compile-process">
        <jar jarfile="${process.dir}/target/org.wso2.carbon.registry.samples.handler.process-${version}.jar">
            <fileset dir="${process.dir}/target/classes">
                <include name="**/*.class"/>
            </fileset>
        </jar>
    </target>

    <target name="clean-process">
        <delete dir="${process.dir}/target" quiet="true"/>
        <delete dir="${process.dir}/target/classes" quiet="true"/>
    </target>

     <target name="compile-process" depends="init-process" description="Compile all Java">
        <javac srcdir="${process.dir}/src" destdir="${process.dir}/target/classes">
            <classpath refid="javac.classpath"/>
        </javac>
    </target>

    <target name="init-process">
        <mkdir dir="${process.dir}/target/classes"/>
        <path id="javac.classpath">
             <fileset dir="${registry.home}/repository/components/plugins">
                <include name="**/axiom*.jar"/>
                <include name="**/org.wso2.carbon.logging*.jar"/>
                <include name="**/org.wso2.carbon.registry.api*.jar"/>
                <include name="**/org.wso2.carbon.registry.core*.jar"/>
                <include name="**/org.wso2.carbon.governance.api*.jar"/>
            </fileset>
        </path>
    </target>

    <target name="run-test-plan" depends="jar">
        <java classname="org.wso2.carbon.registry.samples.populator.Main" classpathref="javac.classpath"
              fork="true">
            <sysproperty key="carbon.home"  value="${registry.home}"/>
            <arg value="-ch" />
            <arg value="${registry.home}"/>
            <arg value="-h"/>
            <arg value="${host}"/>
            <arg value="-p" />
            <arg value="${port}"/>
            <arg value="-u" />
            <arg value="${username}"/>
            <arg value="-pw" />
            <arg value="${password}"/>
            <arg value="-l" />
            <arg value="${test.plan.dir}"/>
        </java>
    </target>

    <target name="run-application" depends="jar">
        <java classname="org.wso2.carbon.registry.samples.populator.Main" classpathref="javac.classpath"
              fork="true">
            <sysproperty key="carbon.home"  value="${registry.home}"/>
            <arg value="-ch" />
            <arg value="${registry.home}"/>
            <arg value="-h"/>
            <arg value="${host}"/>
            <arg value="-p" />
            <arg value="${port}"/>
            <arg value="-u" />
            <arg value="${username}"/>
            <arg value="-pw" />
            <arg value="${password}"/>
            <arg value="-l" />
            <arg value="${application.dir}"/>
        </java>
    </target>

    <target name="run-project" depends="jar">
        <java classname="org.wso2.carbon.registry.samples.populator.Main" classpathref="javac.classpath"
              fork="true">
            <sysproperty key="carbon.home"  value="${registry.home}"/>
            <arg value="-ch" />
            <arg value="${registry.home}"/>
            <arg value="-h"/>
            <arg value="${host}"/>
            <arg value="-p" />
            <arg value="${port}"/>
            <arg value="-u" />
            <arg value="${username}"/>
            <arg value="-pw" />
            <arg value="${password}"/>
            <arg value="-l" />
            <arg value="${project.dir}"/>
        </java>
    </target>

    <target name="run-wadl" depends="jar-wadl, jar">
        <java classname="org.wso2.carbon.registry.samples.populator.Main" classpathref="javac.classpath"
              fork="true">
            <sysproperty key="carbon.home"  value="${registry.home}"/>
            <arg value="-ch" />
            <arg value="${registry.home}"/>
            <arg value="-h"/>
            <arg value="${host}"/>
            <arg value="-p" />
            <arg value="${port}"/>
            <arg value="-u" />
            <arg value="${username}"/>
            <arg value="-pw" />
            <arg value="${password}"/>
            <arg value="-l" />
            <arg value="${wadl.dir}"/>
        </java>
    </target>

    <target name="jar-wadl" depends="clean-wadl, compile-wadl">
        <jar jarfile="${wadl.dir}/target/org.wso2.carbon.registry.samples.handler.wadl-${version}.jar">
            <fileset dir="${wadl.dir}/target/classes">
                <include name="**/*.class"/>
            </fileset>
        </jar>
    </target>

    <target name="clean-wadl">
        <delete dir="${wadl.dir}/target" quiet="true"/>
        <delete dir="${wadl.dir}/target/classes" quiet="true"/>
    </target>

     <target name="compile-wadl" depends="init-wadl" description="Compile all Java">
        <javac srcdir="${wadl.dir}/src" destdir="${wadl.dir}/target/classes">
            <classpath refid="javac.classpath"/>
        </javac>
    </target>

    <target name="init-wadl">
        <mkdir dir="${wadl.dir}/target/classes"/>
        <path id="javac.classpath">
             <fileset dir="${registry.home}/repository/components/plugins">
                <include name="**/axiom*.jar"/>
                <include name="**/org.wso2.carbon.logging*.jar"/>
                <include name="**/org.wso2.carbon.registry.api*.jar"/>
                <include name="**/org.wso2.carbon.registry.core*.jar"/>
                <include name="**/org.wso2.carbon.governance.api*.jar"/>
            </fileset>
        </path>
    </target>

    <target name="init">
        <mkdir dir="${class.dir}"/>
        <path id="javac.classpath">
            <pathelement path="${class.dir}"/>
             <fileset dir="${registry.home}/repository/components/plugins">
                <include name="**/axiom_*.jar"/>
                <include name="**/axis2_*.jar"/>
                <include name="**/commons-codec*.jar"/>
                <include name="**/commons-httpclient_*.jar"/>
                <include name="**/javax.servlet_*.jar"/>
                <include name="**/httpcore_*.jar"/>
                <include name="**/neethi*.jar"/>
                <include name="**/wsdl4j_*.jar"/>
                <include name="**/XmlSchema*.jar"/>
                <include name="**/org.wso2.securevault_*.jar"/>
                <include name="**/org.wso2.carbon.core*.jar"/>
                <include name="**/org.wso2.carbon.base*.jar"/>
                <include name="**/org.wso2.carbon.utils*.jar"/>
                <include name="**/org.wso2.carbon.authenticator.stub*.jar"/>
                <include name="**/org.wso2.carbon.logging_*.jar"/>
                <include name="**/org.wso2.carbon.registry.api_*.jar"/>
                <include name="**/org.wso2.carbon.registry.core_*.jar"/>
                <include name="**/org.wso2.carbon.registry.resource.ui_*.jar"/>
                <include name="**/org.wso2.carbon.registry.resource.stub_*.jar"/>
                <include name="**/org.wso2.carbon.registry.resource_*.jar"/>
                <include name="**/org.wso2.carbon.registry.extensions.ui_*.jar"/>
                <include name="**/org.wso2.carbon.registry.extensions.stub_*.jar"/>
                <include name="**/org.wso2.carbon.registry.ws.client_*.jar"/>
                <include name="**/org.wso2.carbon.registry.handler.stub_*.jar"/>
                <include name="**/org.wso2.carbon.governance.api_*.jar"/>
            </fileset>
        </path>
    </target>

    <target name="clean">
        <delete dir="target" quiet="true"/>
        <delete dir="${class.dir}" quiet="true"/>
    </target>

    <target name="jar" depends="clean, compile">
        <jar jarfile="target/${ant.project.name}-${version}.jar">
            <fileset dir="target/classes">
                <include name="**/*.class"/>
            </fileset>
        </jar>
        <copy file="target/${ant.project.name}-${version}.jar" todir="dist" overwrite="true" />
    </target>

</project>
