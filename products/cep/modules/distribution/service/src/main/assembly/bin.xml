<assembly>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/wso2carbon-core-${carbon.version}</directory>
            <outputDirectory>wso2cep-${pom.version}</outputDirectory>
            <excludes>
                <exclude>**/*.sh</exclude>
                <exclude>**/conf/axis2/axis2.xml</exclude>
                <exclude>**/services/sample01.aar</exclude>
                <exclude>**/repository/services/version/**</exclude>
                <exclude>**/version.txt</exclude>
                <exclude>**/LICENSE.txt</exclude>
                <exclude>**/wso2server.bat</exclude>
                <exclude>**/README.txt</exclude>
                <exclude>**/INSTALL.txt</exclude>
                <exclude>**/release-notes.html</exclude>
                <exclude>**/carbon.xml</exclude>
                <exclude>**/FastMovingStockQuoteReceiver.aar</exclude>
                <exclude>**/qpidClientLibs.zip</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/wso2carbon-core-${carbon.version}</directory>
            <outputDirectory>wso2cep-${pom.version}</outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../../../modules/samples/service/lib/qpidClientJars</directory>
            <outputDirectory>wso2cep-${pom.version}/samples/lib</outputDirectory>
            <includes>
                <include>**/*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ../../p2-profile/product/target/wso2carbon-core-${carbon.version}/repository/conf/advanced/
            </directory>
            <outputDirectory>wso2cep-${pom.version}/repository/conf/advanced
            </outputDirectory>
            <includes>
                <include>**/qpid-config.xml</include>
                <include>**/qpid-jmxremote.access</include>
                <include>**/qpid-virtualhosts.xml</include>
            </includes>
        </fileSet>
        <!--copying multitenancy-packages.xml file-->
        <fileSet>
            <directory>
                ../../p2-profile/service/target/wso2carbon-core-${carbon.version}/repository/conf/
            </directory>
            <outputDirectory>wso2cep-${pom.version}/repository/conf</outputDirectory>
            <includes>
                <include>**/multitenancy-packages.xml</include>
                <include>**/identity.xml</include>
                <include>**/stratos.xml</include>
            </includes>
        </fileSet>


        <!-- copy the landing page webapp -->
        <fileSet>
			<directory>lib/home</directory>
			<outputDirectory>wso2cep-${pom.version}/repository/deployment/server/webapps/STRATOS_ROOT</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>../../p2-profile/service/target/wso2carbon-core-${carbon.version}/dbscripts/identity</directory>
            <outputDirectory>wso2cep-${pom.version}/dbscripts/identity</outputDirectory>
            <includes>
                <include>**/**.sql</include>
            </includes>
        </fileSet>


    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>wso2cep-${pom.version}/repository/deployment/client/modules
            </outputDirectory>
            <includes>
                <include>org.apache.rampart:rampart:mar</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <files>
        <file>
            <source>target/wso2carbon-core-${carbon.version}/repository/conf/axis2/axis2.xml</source>
            <outputDirectory>wso2cep-${pom.version}/repository/conf/axis2</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <!-- copying event broker config file -->
        <file>
            <source>
                ../../p2-profile/service/target/wso2carbon-core-${carbon.version}/repository/conf/event-broker.xml
            </source>
            <outputDirectory>wso2cep-${pom.version}/repository/conf/</outputDirectory>
        </file>
        <!-- copying agent broker config files -->
        <file>
            <source>
                ../../p2-profile/service/target/wso2carbon-core-${carbon.version}/repository/conf/agent-config.xml
            </source>
            <outputDirectory>wso2cep-${pom.version}/repository/conf/</outputDirectory>
        </file>
        <file>
            <source>
                ../../p2-profile/service/target/wso2carbon-core-${carbon.version}/repository/conf/agent-server-config.xml
            </source>
            <outputDirectory>wso2cep-${pom.version}/repository/conf/</outputDirectory>
        </file>
        <!-- Including syslog-config.xml file -->
