            <outputDirectory>wso2cep-${pom.version}/repository/conf/message-broker/etc/
            </outputDirectory>
        </file>
        <file>
            <source>src/main/conf/message-broker/etc/jmxremote.access</source>
            <outputDirectory>wso2cep-${pom.version}/repository/conf/message-broker/etc/
            </outputDirectory>
        </file>
        <file>
            <source>src/main/conf/message-broker/etc/virtualhosts.xml</source>
            <outputDirectory>wso2cep-${pom.version}/repository/conf/message-broker/etc/
            </outputDirectory>
        </file>
        <file>
            <source>../../../LICENSE.txt</source>
            <outputDirectory>wso2cep-${pom.version}</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>../../../README.txt</source>
            <outputDirectory>wso2cep-${pom.version}</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>../../../INSTALL.txt</source>
            <outputDirectory>wso2cep-${pom.version}</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>../../../docs/xdoc/release-notes.xml</source>
            <outputDirectory>wso2cep-${pom.version}</outputDirectory>
            <destName>release-notes.html</destName>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>target/wso2carbon-core-${carbon.version}/bin/README.txt</source>
            <outputDirectory>wso2cep-${pom.version}/bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>target/wso2carbon-core-${carbon.version}/bin/version.txt</source>
            <outputDirectory>wso2cep-${pom.version}/bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>target/wso2carbon-core-${carbon.version}/bin/wso2server.bat</source>
            <outputDirectory>wso2cep-${pom.version}/bin/</outputDirectory>
