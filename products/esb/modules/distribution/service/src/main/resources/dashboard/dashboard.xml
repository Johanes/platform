										<property key="currentGadgetLayout">G1#1</property>
									</properties>
									<children />
								</resource>
							</children>
						</resource>
						<resource path="/repository/dashboards/esb/tabs/1"
							isCollection="true">
							<mediaType />
							<description />
							<properties>
								<property key="tabTitle">Endpoints View</property>
							</properties>
							<children>
								<resource path="/repository/dashboards/esb/tabs/1/currentGadgetLayout"
