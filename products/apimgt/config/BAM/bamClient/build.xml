<project name="BAMClient" default="configureBAM" basedir=".">

    <property name="class.dir" value="target/classes"/>

    <target name="init">
        <mkdir dir="${class.dir}"/>
        <path id="javac.classpath">
            <pathelement path="${class.dir}"/>
            <fileset dir="../../repository/components/plugins"/>
        </path>
    </target>

    <target name="compile" depends="init" description="Compile all Java">
        <javac srcdir="src" destdir="${class.dir}">
            <classpath refid="javac.classpath"/>
        </javac>
    </target>

    <target name="configureBAM" depends="compile">
        <java classname="org.wso2.carbon.bam.client.Client"
              classpathref="javac.classpath" fork="true">
            <sysproperty key="bamUrl" value="https://localhost:9444/services/"/>
            <sysproperty key="carbon.home" value="./.."/>
            <sysproperty key="amConfigFilePath" value="./.."/>
        </java>
    </target>

</project>
