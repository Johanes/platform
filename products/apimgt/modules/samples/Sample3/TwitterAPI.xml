<?xml version="1.0" encoding="UTF-8"?>
<api xmlns="http://ws.apache.org/ns/synapse" name="TwitterAPI" context="/twitter">
       <resource methods="POST" url-mapping="/search">
            <inSequence>
		<property name="REST_URL_POSTFIX" scope="axis2" action="remove"/>
                <send>
                    <endpoint name="twitter_search">
                        <address uri="http://search.twitter.com/search.atom"/>
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </resource>
        <handlers>
            <handler class="org.wso2.carbon.api.handler.throttle.RestAPIThrottleHandler">
                <property name="id" value="B"/>
                <property name="policyKey" value="conf:/BasicMediatorThrottle_policy.xml"/>
            </handler>
        </handlers>
</api>

