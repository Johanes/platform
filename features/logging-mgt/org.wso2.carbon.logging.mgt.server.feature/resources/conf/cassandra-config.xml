<!--
    This is the configuration file for Syslog specific properties.
-->

<syslogConfig xmlns="http://wso2.org/projects/carbon/carbon.xml">
    <isCassandraAvailable>false</isCassandraAvailable>
    <!--Set the syslog-ng host url which specifies the log location where the logs are hosted-->
    <cassandraHost>localhost:9160</cassandraHost>
    <keyspace>LogEntry</keyspace>
    <columnfamily>logs</columnfamily>
    <user></user>
    <password></password>
   

</syslogConfig>
