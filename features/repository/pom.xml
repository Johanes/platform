				<featureArtifactDef>org.wso2.is:org.wso2.is.scim.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.is:org.wso2.is.self.registration.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.is:org.wso2.is.sso.saml.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.is:org.wso2.is.user.profiles.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.is:org.wso2.is.xacml.feature:${platform.version}</featureArtifactDef>
                            </featureArtifacts>

                            <categories>

                                <!--Start of IS feature categories-->
                                <category>
                                    <id>org.wso2.carbon.is.category</id>
                                    <label>Identity Server</label>
                                    <description>This category contains features required for WSO2
                                        IS
                                    </description>
                                    <features>                                       
                                        <catFeature>
                                            <id>org.wso2.is.mandatory</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.is.identity.core</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.is.identity.mgt</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.is.identity.provider</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
					<catFeature>
                                            <id>org.wso2.is.registry</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
					<catFeature>
                                            <id>org.wso2.is.oauth</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.is.passive.sts</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.is.relying.party</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
					<catFeature>
                                            <id>org.wso2.is.scim</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.is.sso.saml</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
                                        <catFeature>
                                            <id>org.wso2.is.user.profiles</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
					<catFeature>
                                            <id>org.wso2.is.xacml</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
					<catFeature>
                                            <id>org.wso2.is.directory.server</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
					<catFeature>
                                            <id>org.wso2.is.cloud.identity</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
					<catFeature>
                                            <id>org.wso2.is.self.registration</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
					<catFeature>
                                            <id>org.wso2.is.authenticators</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
					<catFeature>
                                            <id>org.wso2.is.claim.mgt</id>
                                            <version>4.2.0-SNAPSHOT</version>
                                        </catFeature>
                                    </features>
                                </category>
                                <!--End of IS feature categories-->


                               
                                <!--add the product styles features here-->
                                <category>
                                    <id>org.wso2.styles.category</id>
                                    <label>Product Styles</label>
                                    <description>This category contains WSO2 product styles</description>
                                    <features>
                                        <catFeature>
                                            <id>org.wso2.is.styles</id>
                                            <version>4.1.0</version>
                                        </catFeature>
                                    </features>
                                </category>

                            </categories>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
