				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.common.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.identity:org.wso2.identity.ui.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.stratos.identity.saml2.sso.mgt.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.usage.agent.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.throttling.agent.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.deployment.feature:${platform.version}</featureArtifactDef>
				<!--featureArtifactDef>org.wso2.carbon:org.wso2.carbon.load.balance.agent.server.feature:${stratos.version}</featureArtifactDef-->
                                
				<!-- IS specific composite features -->
				<featureArtifactDef>org.wso2.is:org.wso2.is.authenticators.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.is:org.wso2.is.claim.mgt.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.is:org.wso2.is.cloud.identity.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.is:org.wso2.is.directory.server.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.is:org.wso2.is.identity.core.feature:${platform.version}</featureArtifactDef>
