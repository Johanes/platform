<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-features</artifactId>
        <version>4.2.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>wso2carbon-feature-repository</artifactId>
    <version>4.2.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Feature Repository</name>

    <url>http://wso2.org</url>

	<properties>
		<platform.version>4.2.0-SNAPSHOT</platform.version>
		<is.product.version>4.5.0-SNAPSHOT</is.product.version>
		<stratos.version>2.2.0-SNAPSHOT</stratos.version>
	</properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>1.5.1</version>
                <executions>
                    <execution>
                        <id>2-p2-repo-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-repo-gen</goal>
                        </goals>
                        <configuration>
                            <p2AgentLocation>${basedir}/target/p2-agent</p2AgentLocation>
                            <metadataRepository>file:${basedir}/target/p2-repo</metadataRepository>
                            <artifactRepository>file:${basedir}/target/p2-repo</artifactRepository>
                            <publishArtifacts>true</publishArtifacts>
                            <publishArtifactRepository>true</publishArtifactRepository>
                            <featureArtifacts>

				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.logging.mgt.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.databridge.datapublisher.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.system.statistics.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.soaptracer.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.security.mgt.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.xkms.mgt.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.sts.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.xfer.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.mex.feature:${platform.version}</featureArtifactDef>

				<!-- Registry related features -->
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.core.common.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.core.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.core.ui.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.ui.menu.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.resource.properties.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.profiles.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.contentsearch.feature:${platform.version}</featureArtifactDef>

				<!-- Directory server related features -->
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.directory.service.mgr.feature:${platform.version}</featureArtifactDef>

				<!-- Identity related features -->
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.provider.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.relying.party.feature:${platform.version}</featureArtifactDef>
				<!--featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.mgt.feature:${platform.version}</featureArtifactDef-->
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.self.registration.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.user.profile.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.xacml.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.claim.mgt.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.sso.saml.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.authenticator.saml2.sso.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.um.ws.service.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.identity:org.wso2.identity.styles.feature:${is.product.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.identity:org.wso2.identity.utils.feature:${is.product.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.oauth.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.authenticator.iwa.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.sts.passive.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.ldap.server.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.scim.feature:${platform.version}</featureArtifactDef>
				<!-- featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.mgt.feature:${platform.version}</featureArtifactDef -->
				
				<!-- Features related to Cloud Identity -->
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.common.feature:${stratos.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.identity:org.wso2.identity.ui.feature:${is.product.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.stratos.identity.saml2.sso.mgt.feature:${stratos.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.usage.agent.feature:${stratos.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.throttling.agent.feature:${stratos.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.stratos.deployment.feature:${stratos.version}</featureArtifactDef>
				<!--featureArtifactDef>org.wso2.carbon:org.wso2.carbon.load.balance.agent.server.feature:${stratos.version}</featureArtifactDef-->
                                
				
                            </featureArtifacts>

                            
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
