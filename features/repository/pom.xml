				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.core.ui.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.ui.menu.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.resource.properties.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.profiles.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.registry.contentsearch.feature:${platform.version}</featureArtifactDef>

				<!-- Directory server related features -->
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.directory.service.mgr.feature:${platform.version}</featureArtifactDef>

				<!-- Identity related features -->
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.core.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.provider.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.relying.party.feature:${platform.version}</featureArtifactDef>
				<!--featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.mgt.feature:${platform.version}</featureArtifactDef-->
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.self.registration.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.user.profile.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.xacml.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.claim.mgt.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.sso.saml.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.authenticator.saml2.sso.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.um.ws.service.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.identity:org.wso2.identity.styles.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.identity:org.wso2.identity.utils.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.oauth.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.authenticator.iwa.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.sts.passive.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.ldap.server.feature:${platform.version}</featureArtifactDef>
				<featureArtifactDef>org.wso2.carbon:org.wso2.carbon.identity.scim.feature:${platform.version}</featureArtifactDef>
