    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>rss-manager</artifactId>
        <version>4.0.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>org.wso2.carbon.rssmanager.core</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - RSS Manager Core Bundle</name>
    <description>WSO2 Carbon - RSS Manager Core Bundle</description>
    <url>http://wso2.org</url>

    <build>
        <plugins>
            <!--plugin>
                <groupId>org.apache.axis2</groupId>
                <artifactId>axis2-java2wsdl-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>java2wsdl</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <className>
                        org.wso2.carbon.rssmanager.core.servicece.RSSAdmin
                    </className>
                </configuration>
            </plugin-->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>1.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Bundle-Description>RSS Manager Core Bundle</Bundle-Description>
                        <Private-Package>org.wso2.carbon.rssmanager.core.internal</Private-Package>
                        <Import-Package>
			    org.apache.axis2.*; version="${axis2.osgi.version.range}",
			    javax.xml.*,
			    org.osgi.framework, org.osgi.service.component,
			    org.wso2.carbon.datasource.*,
			    org.apache.axiom.om.*,
			    org.apache.commons.logging,
			    org.wso2.carbon.core.*,
                            org.wso2.carbon.utils.*,
			    org.apache.synapse.commons.datasource.*,
			    org.wso2.carbon.rssmanager.common,
			    org.wso2.carbon.user.*,
			    org.wso2.securevault.secret
                        </Import-Package>
                        <Export-Package>
                            !org.wso2.carbon.rssmanager.core.internal,
                            org.wso2.carbon.rssmanager.core.*
						</Export-Package>
						<DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
            <version>${carbon.platform.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.rssmanager.common</artifactId>
            <version>${carbon.platform.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.registry.core</artifactId>
            <version>${carbon.platform.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.datasource</artifactId>
            <version>${carbon.platform.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2.wso2</groupId>
            <artifactId>axis2</artifactId>
            <version>${axis2.osgi.version}</version>
        </dependency>
    </dependencies>

</project>
