        </parameter>
    </operation>
    <operation name="removeTransportAdaptorConfiguration">
        <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/brokerManager
        </parameter>
    </operation>
    <operation name="removeTransportAdaptorConfigurationFile">
        <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/brokerManager
