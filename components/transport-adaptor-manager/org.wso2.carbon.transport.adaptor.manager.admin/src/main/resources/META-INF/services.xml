                         class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver"/>
        <messageReceiver mep="http://www.w3.org/ns/wsdl/in-out"
                         class="org.apache.axis2.rpc.receivers.RPCMessageReceiver"/>
    </messageReceivers>
    <parameter name="ServiceClass">
        org.wso2.carbon.transport.adaptor.manager.admin.internal.TransportAdaptorManagerAdminService
    </parameter>

    <parameter name="AuthorizationAction" locked="false">/permission/admin/manage/brokerManager
    </parameter>
    <operation name="getTransportAdaptorNames">
