    </operation>
    <operation name="editNotDeployedTransportAdaptorConfigurationFile">
        <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/brokerManager
        </parameter>
    </operation>
    <parameter name="adminService" locked="true">false</parameter>
    <parameter name="hiddenService" locked="true">false</parameter>
</service>


