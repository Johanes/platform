<agentConfig>
	<hostMachine>
		<isAvailable>true</isAvailable>
		<name>Worker-node-1</name>
		<ip>10.100.3.84</ip>
		<port>9443</port>
		<zone>srilanka</zone>
		<templatePath>/mnt/lxc</templatePath> <!-- same as ContainerRoot -->
		<template name="template-wso2-carbon-server-as" domain="wso2.as.domain" />
		<template name="template-wso2-carbon-server-esb" domain="wso2.esb.domain" />
		<template name="wso2as1" domain="wso2.as1.domain" />
		<template name="wso2as2" domain="wso2.as2.domain" />
		<bridges>
			<bridge>
				<isAvailable>true</isAvailable>
				<bridgeIp>169.254.1.1</bridgeIp>
				<workerNode>Worker-node-1</workerNode>
				<maxIpCount>21</maxIpCount>
				<currentIpCount>2</currentIpCount>
				<netmask>255.255.255.0</netmask>
				<gateway>br-lxc</gateway>
			</bridge>
		</bridges>
		<domains>
			<domain name="wso2.as.domain" />
			<domain name="wso2.as1.domain" />
			<domain name="wso2.as2.domain" />
		</domains>
	</hostMachine>
	<resourcePlan>
		<plan name="S">
			<memory>512M</memory>
			<swap>10G</swap>
			<cpuShares>300</cpuShares>
			<cpuSets>0-7</cpuSets>
			<storage>1900</storage>
		</plan> 
		<plan name="L">
			<memory>1024M</memory>
			<swap>20G</swap>
			<cpuShares>600</cpuShares>
			<cpuSets>0-8</cpuSets>
			<storage>4000</storage>
		</plan>
		<plan name="LX">
			<memory>3122M</memory>
			<swap>20G</swap>
			<cpuShares>900</cpuShares>
			<cpuSets>0-9</cpuSets>
			<storage>4000</storage>
		</plan>
	</resourcePlan>

	<!-- This points to the place where helper services such as AgentManagementService 
		and AutoscalerService hosted. -->
	<agentManagementHost url="https://10.100.3.81:9443/services/AgentManagementService" />	
	<defaultPassword value="abc123"/>
	<defaultUsername value="containeruser"/>
	<svnLocation url="" />
</agentConfig>