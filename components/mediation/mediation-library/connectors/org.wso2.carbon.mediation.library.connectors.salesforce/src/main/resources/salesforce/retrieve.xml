<?xml version="1.0" encoding="UTF-8"?>
<template name="salesforce.retrieve" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="salesforce.retrieve.fieldList"/>
    <parameter name="salesforce.retrieve.objectType"/>
    <parameter name="salesforce.retrieve.objectIDS"/>
    <sequence>
        <header expression="get-property('salesforce.serviceUrl')" name="To"/>
        <payloadFactory>
            <format>
                <soapenv:Envelope
                    xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:urn="urn:partner.soap.sforce.com">
                    <soapenv:Header>
                        <urn:SessionHeader>
                            <urn:sessionId>$1</urn:sessionId>
                        </urn:SessionHeader>
                    </soapenv:Header>
                    <soapenv:Body>
                        <urn:retrieve>
                            <urn:fieldList>$2</urn:fieldList>
                            <urn:sObjectType>$3</urn:sObjectType>
                        </urn:retrieve>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args>
                <arg expression="get-property('salesforce.sessionId')"/>
                <arg expression="$func:salesforce.retrieve.fieldList"/>
                <arg expression="$func:salesforce.retrieve.objectType"/>
            </args>
        </payloadFactory>
        <class name="org.wso2.carbon.mediation.library.connectors.salesforce.SetupRetriveSobjects"/>
        <callout action="urn:partner.soap.sforce.com/Soap/retrieveRequest">
            <source type="envelope"/>
            <target xmlns:ns="http://org.apache.synapse/xsd"
                xmlns:ns2="http://org.apache.synapse/xsd"
                xmlns:s11="http://schemas.xmlsoap.org/soap/envelope/"
                xmlns:s12="http://www.w3.org/2003/05/soap-envelope" xpath="s11:Body/child::*[fn:position()=1] | s12:Body/child::*[fn:position()=1]"/>
        </callout>
    </sequence>
</template>
