<% jagg.template("application/application-add", function(inputs, outputs, jagg) { %>
<h3>Add New Application</h3>

<div class="application-add well form-horizontal">

    <div class="control-group">
        <label class="control-label" for="application-name">Name</label>

        <div class="controls">
            <input type="text" class="span4" id="application-name"/>

            <p class="help-block">Applications are required to make API subscriptions and consume them. You will be able to subscribe to these applications from the API details page.</p>
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <button id="application-add-button" class="btn btn-primary">Add</button>
        </div>
    </div>
</div>
<% }); %>