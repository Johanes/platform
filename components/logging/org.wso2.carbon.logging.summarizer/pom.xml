<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>logging</artifactId>
        <version>4.0.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.logging.summarizer</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - Logging Summarizer</name>
    <url>http://wso2.org</url>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>

                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                      
                        <Export-Package>
                          
                            org.wso2.carbon.logging.summarizer.*,
                            org.wso2.carbon.logging.util
                        </Export-Package>
                        <Import-Package>
                            
                            !org.wso2.carbon.logging.summarizer.*,
                            !org.wso2.carbon.logging.util,
                            org.apache.cassandra.*,
                            org.apache.axis2.*; version="${axis2.osgi.version.range}",
                            org.wso2.carbon.utils,
                            org.apache.commons.logging,
                            org.apache.log4j,
                            org.apache.log4j.net,
                            org.apache.log4j.spi,
                            *;resolution:=optional,
                            org.wso2.carbon.analytics.hive.*,
                            org.wso2.carbon.usage.summary.generator.*,
                        </Import-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.axis2.wso2</groupId>
            <artifactId>axis2</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.utils</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.logging</artifactId>
        </dependency>


       

        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core.common</artifactId>
            <version>4.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>commons-pool.wso2</groupId>
            <artifactId>commons-pool</artifactId>
            <version>1.5.0.wso2v1</version>
        </dependency>
      

 <!--Hector -->
        <dependency>
            <groupId>org.hectorclient</groupId>
            <artifactId>hector-core</artifactId>
            <version>${hector-core.version}</version>
        </dependency>

        <!--Hive-->
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.analytics.hive</artifactId>
            <version>4.0.0-SNAPSHOT</version>
        </dependency>


        <!--Task Scheduler-->
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.usage.summary.generator</artifactId>
            <version>2.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <properties>
        <slf4j.version>1.6.1</slf4j.version>
        <cassandra.version>1.1.0.wso2v1</cassandra.version>
        <libthrift.version>0.7.wso2v1</libthrift.version>
        <hector-core.version>1.1-0</hector-core.version>
        <perf4j.version>0.9.12.wso2v1</perf4j.version>
        <highscale.version>1.0.wso2v1</highscale.version>
    </properties>

</project>

